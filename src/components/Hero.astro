---
import ButtonPrimary from "./ButtonPrimary.astro";
import ButtonSecondary from "./ButtonSecondary.astro";
import { getLangFromUrl, useTranslations } from "@/components/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="gap-y-3 md:gap-y-5 flex flex-col items-center justify-center">
  <h1
    class="text-center text-3xl font-bold tracking-tight text-gray-900 md:text-6xl"
  >
    {t("hero.titleup")}
    <br class="md:block hidden" />
    {t("hero.titledown")}
  </h1>
  <p
    class="text-center text-base font-medium text-gray-900 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400"
  >
    {t("hero.subtitle")}
  </p>
  <div class="flex flex-col md:flex-row gap-3 md:gap-5 w-full md:w-auto">
    <ButtonPrimary href="/">{t("hero.getyours")}</ButtonPrimary>
    <ButtonSecondary href="/" aria="Sección servicio técnico"
      >{t("hero.service")}</ButtonSecondary
    >
  </div>
</section>
