---
import ButtonPrimary from "../ButtonPrimary.astro";
import SettingIcon from "../icons/SettingIcon.astro";
import { getLangFromUrl, useTranslations } from "@/components/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="flex flex-col md:flex-row items-center md:h-screen justify-start"
  id="reparaciones"
>
  <div class="flex flex-col gap-6 justify-start md:ms-[14%] mx-8 items-start">
    <h2
      class="text-center text-4xl font-semibold tracking-tight text-gray-900 md:text-5xl"
    >
      {t('repairs.title')}
    </h2>
    <p class="text-xl font-medium">
      {t('repairs.description')}
    </p>
    <ul
      class="md:text-xl text-lg font-medium space-y-2 [&>li]:flex [&>li]:gap-3 [&>li]:items-center"
    >
      <li>
        <SettingIcon />
        {t('repairs.screen')}
      </li>
      <li>
        <SettingIcon />{t('repairs.batery')}
      </li>
      <li><SettingIcon />{t('repairs.carge')}</li>
      <li><SettingIcon />{t('repairs.software')}</li>
      <li>{t('repairs.more')}</li>
    </ul>
    <ButtonPrimary href="/">{t('repairs.button')}</ButtonPrimary>
  </div>

  <img
    src="/img/iphone_lado.png"
    alt="iphone de lado"
    class="md:pt-64 hidden md:block md:max-w-[53rem] md:max-h-[35rem]"
  />
</section>
