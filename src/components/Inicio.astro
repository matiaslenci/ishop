---
import Hero from "./Hero.astro";
---

<section
  class="flex flex-col gap-3 md:gap-7 items-center h-screen justify-end"
  id="inicio"
>
  <Hero />
  <img
    src="/img/iphone_mano.png"
    alt=""
    class="md:h-[40%] h-[30%] sm:block bottom-0"
  />
</section>

<style>
  section {
    background: radial-gradient(circle at center, #f8d3f2, #ffff, #ffff);
  }

  img {
    mask-image: linear-gradient(white 90%, transparent);
  }
</style>
