---
const href: string = Astro.props.href;
---

<a
  class="flex-row justify-center text-black cursor-pointer hover:bg-blue-500 focus:ring-4 focus:outline-none focus:ring-[#1da1f2]/50 font-medium rounded-lg px-5 py-2.5 text-center inline-flex items-center hover:shadow-lg transition-all duration-300 ease-in-out hover:scale-100 scale-90 gap-x-2 opacity-90 hover:opacity-100 hover:text-white"
  href={href}
>
  <slot />
</a>
